{% extends 'base.html.twig' %}

{% block title %}Announcement{% endblock %}

{% block body %}
    {{ include('Admin/announcement/_menu.html.twig') }}
    <h1>Announcement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ announcement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ announcement.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ announcement.description }}</td>
            </tr>
            <tr>
                <th>Published_at</th>
                <td>{{ announcement.publishedAt ? announcement.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Closed_at</th>
                <td>{{ announcement.closedAt ? announcement.closedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ShowCount</th>
                <td>{{ announcement.showCount }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ announcement.isActive ? 'yes' : 'no' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('announcement_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('announcement_edit', {'id': announcement.id}) }}">edit</a>

    {{ include('Admin/announcement/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
